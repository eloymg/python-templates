[tool.poetry]
name = "{{project_name}}"
version = "0.0.1"
description = "{{project_description}}"
authors = ["{{author_fullname}} <{{author_email}}>"]
packages = [{include = "src"}]

[tool.poetry.dependencies]
python = "^3.9"

[tool.poetry.group.dev.dependencies]
black = "^22.12.0"
isort = "^5.11.4"
pre-commit = "^2.21.0"

[tool.poetry.group.typing.dependencies]
mypy = "^0.991"

[tool.poetry.group.lint.dependencies]
pylint = "^2.15.9"
mccabe = "^0.7.0"

[tool.poetry.group.tests.dependencies]
pytest = "^7.2.0"
pytest-cov = "^4.0.0"
boto3 = "^1.26.41"

[tool.poetry.group.nox.dependencies]
nox = "^2022.11.21"

[tool.pylint.basic]
load-plugins = ["pylint.extensions.mccabe"]
output-format = "colorized"

[tool.pylint.design]
max-args = 10
min-public-methods = 1
ignore-paths = ""

[tool.pylint.messages_control]
disable = [
    "missing-docstring",
    "import-error",
    "too-few-public-methods"]
max-line-length = 88

[tool.isort]
profile = "black"
src_paths = ["src", "tests"]

[tool.coverage.run]
branch = true
parallel = true
source = ["src"]

[tool.coverage.paths]
source = ["src"]

[tool.coverage.report]
show_missing = true

[tool.pytest.ini_options]
addopts = "-v --cov=src --cov-config=pyproject.toml"
junit_suite_name = "src"

[tool.mypy]
pretty = true
exclude = ""

[build-system]
requires = ["poetry>=1.3.1"]
build-backend = "poetry.masonry.api"
